{
  "name": "lostark-api-service",
  "version": "2.0.0",
  "description": "Lostark API Service - 3-tier architecture for Lost Ark API integration",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "clean": "yarn workspaces foreach -A run clean",
    "dev": "yarn workspaces foreach -A run dev",
    "start": "yarn workspace @lostark/fetch start",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:fix": "yarn workspaces foreach -A run lint:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "yarn typecheck && yarn lint && yarn format",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "test:unit": "tsx --test tests/unit/**/*.test.ts",
    "test:integration": "tsx --test tests/integration/**/*.test.ts",
    "test:api": "tsx --test tests/api/**/*.test.ts",
    "test:cache-flow": "tsx tests/api/package-based-cache-flow-test.ts",
    "test:workspace": "yarn workspaces foreach -A run test",
    "validate:monorepo": "yarn validate:deps && yarn validate:refs && yarn typecheck",
    "validate:deps": "node scripts/validate-dependencies.mjs",
    "validate:refs": "node scripts/validate-references.mjs",
    "validate:build": "yarn build",
    "validate:full": "yarn validate:monorepo && yarn test && yarn build && yarn lint",
    "validate:cursorrules-sync": "node scripts/validate-cursorrules-sync.mjs",
    "precommit": "yarn validate:monorepo && yarn test:unit && yarn lint",
    "prepush": "yarn validate:monorepo && yarn test && yarn build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artbiit/lostark-api-service"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "yaml-eslint-parser": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@lostark/data-service": "workspace:*",
    "@lostark/rest-api": "workspace:*",
    "@lostark/shared": "workspace:*",
    "@lostark/udp-gateway": "workspace:*",
    "dotenv": "^17.2.1"
  }
}
