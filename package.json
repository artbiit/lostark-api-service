{
  "name": "lostark-remote-kakao",
  "version": "1.0.0",
  "description": "Lost Ark Remote Kakao - 3-tier architecture for Lost Ark API integration",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "dev": "yarn workspaces run dev",
    "start": "yarn workspace @lostark/fetch start",
    "typecheck": "yarn workspaces run typecheck",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "yarn typecheck && yarn lint && yarn format",
    "test": "yarn workspaces run test"
  },
  "repository": {
    "type": "git",
    "url": "https://git.positivenerd.duckdns.org/ljs/lostark-remote-kakao.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "yaml-eslint-parser": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": ["eslint --fix", "prettier --write"],
    "*.{json,yml,yaml,md}": ["prettier --write"]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
