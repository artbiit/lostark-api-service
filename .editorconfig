root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{config.js,config.cjs,config.mjs}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
max_line_length = 120

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Documentation
[*.{txt,md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80
